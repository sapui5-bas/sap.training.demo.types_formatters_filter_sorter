<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="sap.training.controller.Message_Manager"
	xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
	
	<f:SimpleForm>
		<f:content>
			<Label text="Number of Employees"/>
			<Input id="idNumOfEmployeesInput"
				value="{ path: '/company/numOfEmployees',
			    		 type: 'sap.ui.model.type.Integer',
						 constraints: {minimum: 1, maximum: 5000000} }"/>
		</f:content>
	</f:SimpleForm>
	
</mvc:View>